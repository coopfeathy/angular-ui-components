{
  "extends": "../bazel-tsconfig-build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../../dist/packages/material-luxon-adapter",
    "rootDir": ".",
    "rootDirs": [
      ".",
      "../../dist/packages/material-luxon-adapter"
    ],
    "importHelpers": false,
    "module": "umd",
    "target": "es5",
    "types": ["jasmine"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@angular/material/*": ["../../dist/packages/material/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.spec.ts",
    "../dev-mode-types.d.ts"
  ],
  "exclude": [
    "**/*.e2e.spec.ts"
  ]
}
